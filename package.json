{
    "name": "hemingway",
    "description": "A personal blogging theme for Ghost.",
    "demo": "https://jason.re",
    "version": "5.0.12",
    "engines": {
        "ghost": ">=2.0.0",
        "ghost-api": "v2"
    },
    "license": "MIT",
    "screenshots": {
